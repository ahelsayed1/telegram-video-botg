# ==================== Telegram Bot ====================
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321  # معرفات المشرفين مفصولة بفواصل

# ==================== AI Services ====================

# Google Gemini AI
GOOGLE_AI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_VISION_MODEL=gemini-pro-vision

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Luma AI (لإنشاء الفيديوهات)
LUMAAI_API_KEY=your_luma_ai_api_key_here

# Stable Diffusion (بديل لإنشاء الصور)
STABILITY_API_KEY=your_stability_ai_api_key_here
STABLE_DIFFUSION_URL=https://api.stability.ai/v1/generation/stable-diffusion-v1-6/text-to-image

# ==================== Image Settings ====================
IMAGE_SIZE=1024x1024
IMAGE_QUALITY=standard
MAX_IMAGES_PER_USER=10
MAX_VIDEOS_PER_USER=5

# ==================== Usage Limits ====================
DAILY_AI_LIMIT=20
DAILY_IMAGE_LIMIT=5
DAILY_VIDEO_LIMIT=2

# ==================== System Settings ====================
LOG_LEVEL=INFO
DATABASE_NAME=bot_database.db
BACKUP_ENABLED=True
CLEANUP_DAYS=30

# ==================== Railway Deployment ====================
RAILWAY_ENVIRONMENT=production
PORT=8000
WEB_CONCURRENCY=3
