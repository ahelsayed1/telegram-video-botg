{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python3", "ffmpeg"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python test_api.py",
    "restartPolicyType": "ON_FAILURE"
  }
}
